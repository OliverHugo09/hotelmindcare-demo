{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "typeRoots": [
        "node_modules/@types",
        "node_modules/babel__core"
      ],
      "types": [
        "node",
        "babel__core"
      ]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      ".expo/types/**/*.ts",
      "expo-env.d.ts",
      "nativewind-env.d.ts",
      "./**/*", 
      "./images.d.ts"
    ]
  }